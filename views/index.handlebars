<html lang="en">
<head>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://npmcdn.com/babel-core@5.8.38/browser.min.js"></script>
  <script type="text/babel" src="/assets/clientBundle.js"></script>
  
  <!-- React -->
  <script crossorigin src="react/react.production.min.js"></script>
  <script crossorigin src="reactDOM/react-dom.production.min.js"></script>
  <script crossorigin src="modules/prop-types/prop-types.min.js"></script>
  
  <!-- Color Wheel -->
  <script src="modules/reinvented-color-wheel/webcomponents/index.js"></script>
</head>
  
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Real-time Drawing App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" id="room1" href="#">Room 1</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="room2" href="#">Room 2</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="createRoom" href="#">Create room</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="modal" data-target="#joinRoomModal" href="#">Join room</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div id="leftBar" class="col-md-auto"></div>
      <div id="content" class="col-md-auto"></div>
      <div id="rightBar" class="col-md-auto"></div>
    </div>
  </div>

  <!-- Join Room Modal -->
    <div class="modal fade" id="joinRoomModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Enter room code</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <input type="room" class="form-control" id="roomInput" placeholder="e.g. ABCD">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary">Join</button>
          </div>
        </div>
      </div>
    </div>
</body>
</html>